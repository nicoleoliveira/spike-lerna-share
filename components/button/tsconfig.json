{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "allowUnreachableCode": false,
      "declaration": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "importHelpers": true,
      "lib": ["es2017", "dom"],
      "module": "es2015",
      "moduleResolution": "node",
      "noEmitHelpers": true,
      "noFallthroughCasesInSwitch": true,
      "noUnusedLocals": false,
      "noUnusedParameters": true,
      "skipLibCheck": true,
      "strict": true,
      "target": "es2017",
      "sourceMap": true,
      "inlineSources": true,
      "paths": {
        "@nicoleoliveira/common": [
          "./node_modules/@nicoleoliveira/common/dist"
        ],
        "@nicoleoliveira/common/*": [
          "./node_modules/@nicoleoliveira/common/dist/*"
        ],
      }
    },
    "include": ["src/**/*"],
    "exclude": ["src/**/**.test.*"]
  }